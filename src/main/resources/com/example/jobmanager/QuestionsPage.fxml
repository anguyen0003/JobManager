<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jobmanager.QuestionsController">
    <children>
        <Label fx:id="questionLabel" text="Behavioral Question" wrapText="true" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="backButton" mnemonicParsing="false" text="&lt; Back" />
            <Button fx:id="forwardButton" mnemonicParsing="false" text="Next &gt;" />
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="addQuestionField" promptText="Add new question" />
            <Button fx:id="addButton" mnemonicParsing="false" text="Add" />
        </HBox>
        <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete Current Question" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
